@using MVC_Pustokkk.Areas.Admin.ViewModels
@model List<CategoryVM>

<div class="container">
    <a asp-action="Create" class="btn btn-primary mb-3">Add Category</a>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Products Count</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var category in Model)
            {
                <tr>
                    <td>@category.Id</td>
                    <td>@category.Name</td>
                    <td>@category.Featureds?.Count ?? 0</td>
                    <td>
                        <a asp-action="Update" asp-route-id="@category.Id" class="btn btn-secondary">Edit</a>

                        <form asp-action="Delete" asp-route-id="@category.Id" method="post" style="display:inline-block" onsubmit="return confirm('Silmək istədiyinizə əminsiniz?');">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-warning">Delete</button>
                        </form>


                        <a asp-action="Detail" asp-route-id="@category.Id" class="btn btn-info">Details</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
